{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "biome",
  "version": "0.1.0",
  "identifier": "com.owl.biome",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Biome",
        "width": 800,
        "height": 500,
        "minWidth": 800,
        "minHeight": 500,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "resizable": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
